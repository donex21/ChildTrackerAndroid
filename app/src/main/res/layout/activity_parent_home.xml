<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentHomeActivity"
    android:layout_margin="15dp">

    <EditText
        android:id="@+id/et_child_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Search Child Email"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Reload"/>

    <Button
        android:id="@+id/btn_child_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:background="#4281e5"
        android:text="Add"
        android:textColor="#fff"
        app:layout_constraintStart_toEndOf="@+id/et_child_search"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Add " />

    <ListView
        android:id="@+id/lv_children_display"
        android:layout_width="409dp"
        android:layout_height="663dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_child_search" />

    <Button
        android:id="@+id/Reload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#74c4e5"/>
</androidx.constraintlayout.widget.ConstraintLayout>